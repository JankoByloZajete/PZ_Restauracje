@model IEnumerable<UserManagement.MVC.Models.Restaurant>
@{
    ViewData["Title"] = "Add Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Restaurant</h1>
<form method="post" asp-action="AddRestaurant" asp-controller="RestaurantManager">
    <div class="input-group">
        <input name="restaurant_name" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add new restaurant</button>
        </span>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>

            <th>Id</th>
            <th>Restaurant</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
            </tr>
        }

    </tbody>
</table>